{
  "@type": "MessageCard",
  "@context": "http://schema.org/extensions",
  "themeColor": "0076D7",
  "summary": "A new code review by $NAME!",
  "sections": [
    {
      "title": "**A new code review**",
      "facts": [
        {
          "name": "Title:",
          "value": "$TITLE"
        },
        {
          "name": "Created by:",
          "value": "$CREATEDBY"
        },
        {
          "name": "Link:",
          "value": "[Open changes]($WORKITEMURL)"
        }
      ],
      "markdown": true
    }
  ]
}